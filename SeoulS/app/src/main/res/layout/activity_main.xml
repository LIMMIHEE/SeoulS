<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <androidx.cardview.widget.CardView
            android:layout_width="247dp"
            android:layout_height="226dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="330dp"
            android:layout_marginBottom="100dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rand_img"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/main_card_corner"
                    android:scaleType="centerCrop"
                    android:src="@drawable/jeremy">

                </ImageView>

            </LinearLayout>

            <TextView
                android:id="@+id/rand_name"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="135dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="랜덤스포츠명"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/rand_info_btn"
                android:layout_width="194dp"
                android:layout_height="36dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="177dp"
                android:background="@drawable/btn_bg_ex"
                android:text="Button" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginLeft="8dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/aqua_sports_btn"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/main_sports_btn"
                android:text="#수상스포츠"
                android:textStyle="bold" />

            <Button
                android:id="@+id/athletics_sports_btn"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/main_sports_btn"
                android:text="#육상스포츠"
                android:textStyle="bold" />

            <Button
                android:id="@+id/all_sports_btn"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/main_sports_btn"
                android:text="#전체"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>