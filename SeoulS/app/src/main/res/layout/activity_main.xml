<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="296dp"
            android:layout_margin="30dp"
            android:background="#2196F3"
            android:padding="10dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="387dp"
                android:layout_height="match_parent"
                android:background="#2196F3"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:text="현재 날씨"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/wether_img"
                    android:layout_width="173dp"
                    android:layout_height="105dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp"
                    app:srcCompat="@drawable/archery" />

                <TextView
                    android:id="@+id/City_name"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Temperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="249dp"
            android:layout_height="269dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rand_img"
                    android:layout_width="match_parent"
                    android:layout_height="142dp"
                    android:background="@drawable/main_card_corner"
                    android:scaleType="centerCrop"
                    android:src="@drawable/jeremy">

                </ImageView>

            </LinearLayout>

            <TextView
                android:id="@+id/rand_name"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="랜덤스포츠명"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/rand_info_btn"
                android:layout_width="194dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginTop="89dp"
                android:background="@drawable/btn_bg_ex"
                android:text="자세 정보 보기" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginLeft="8dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/aqua_sports_btn"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/main_sports_btn"
                android:text="#수상스포츠"
                android:textStyle="bold" />

            <Button
                android:id="@+id/athletics_sports_btn"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/main_sports_btn"
                android:text="#육상스포츠"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Site_btn"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/main_sports_btn"
                android:text="#한강 정보 보기"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>