<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".Recommendation">

    <Button
        android:id="@+id/backBtn4"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="55dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/ic_keyboard_arrow_left_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backBtn3"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="47dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/ic_baseline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="자신과 맞는 스포츠를 찾아봐요!"
            android:textColor="#2196F3"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp"
            android:gravity="center"
            android:text="한 번 선택하면 되돌리기가 불가능합니다!\n 다시 하고 싶으시다면 오른쪽 위의 되돌리기 버튼을 클릭해 주세요!"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="육상 아니면 수상?"
            android:textColor="#2C2C2C"
            android:textSize="18dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/Group2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/g_2_1"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="육상" />

            <RadioButton
                android:id="@+id/g_2_2"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="수상" />

            <RadioButton
                android:id="@+id/g_2_3"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="둘 다 좋다!" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="상체 하체 아니면 전신?"
            android:textColor="#2C2C2C"
            android:textSize="18dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/Group3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/g_3_1"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="상체!" />

            <RadioButton
                android:id="@+id/g_3_2"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="하체!" />

            <RadioButton
                android:id="@+id/g_3_3"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="난 전신!!" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="공 같은 것 사용은?"
            android:textColor="#2C2C2C"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="지키거나 빼앗거나 쳐내서나 하는 용도" />

        <RadioGroup
            android:id="@+id/Group4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/g_4_1"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text=" 좋아!" />

            <RadioButton
                android:id="@+id/g_4_2"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="몸 쓰는 것만!" />

            <RadioButton
                android:id="@+id/g_4_3"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="상관없어!" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="룰 같은 건?"
            android:textColor="#2C2C2C"
            android:textSize="18dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/Group5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/g_5_1"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="좋아!" />

            <RadioButton
                android:id="@+id/g_5_2"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="싫어!" />

            <RadioButton
                android:id="@+id/g_5_3"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="뭐든 좋아!" />
        </RadioGroup>

        <Button
            android:id="@+id/Print_Btn"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_re_mian_red"
            android:text="나에게 어울리는 스포츠는...?" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>