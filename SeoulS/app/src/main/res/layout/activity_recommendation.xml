<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="24dp"
    tools:context=".Recommendation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="자신과 맞는 스포츠를 찾아봐요!"
            android:textColor="#2196F3"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:gravity="center"
            android:text="아래 설문을 통해 자신의 성향과 비슷한 스포츠를 찾아보세요" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="나에게 맞는 장소는?"
            android:textColor="#2C2C2C"
            android:textSize="18dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/Group1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/g_1_1"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="실내" />

            <RadioButton
                android:id="@+id/g_1_2"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="외부" />

            <RadioButton
                android:id="@+id/g_1_3"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="어디든 좋다!" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="육상 아니면 수상?"
            android:textColor="#2C2C2C"
            android:textSize="18dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/Group2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/g_2_1"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="육상" />

            <RadioButton
                android:id="@+id/g_2_2"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="수상" />

            <RadioButton
                android:id="@+id/g_2_3"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="둘 다 좋다!" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="상체운동 하체운동?"
            android:textColor="#2C2C2C"
            android:textSize="18dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/Group3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/g_3_1"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="상체!" />

            <RadioButton
                android:id="@+id/g_3_2"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="하체!" />

            <RadioButton
                android:id="@+id/g_3_3"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="난 전신!!" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="도구 사용은?"
            android:textColor="#2C2C2C"
            android:textSize="18dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/Group4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/g_4_1"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text=" 좋아!" />

            <RadioButton
                android:id="@+id/g_4_2"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="몸 쓰는 것만!" />

            <RadioButton
                android:id="@+id/g_4_3"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="상관없어!" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="룰 같은 건?"
            android:textColor="#2C2C2C"
            android:textSize="18dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/Group5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/g_5_1"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="좋아!" />

            <RadioButton
                android:id="@+id/g_5_2"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="싫어!" />

            <RadioButton
                android:id="@+id/g_5_3"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="뭐든 좋아!" />
        </RadioGroup>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_bg_ex"
            android:text="나에게 어울리는 스포츠는...?" />

    </LinearLayout>

</LinearLayout>