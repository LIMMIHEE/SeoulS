<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/call_button"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/round_gray"
        android:drawableTop="@drawable/ic_call_black"
        android:paddingTop="20sp"
        android:paddingBottom="15dp"
        android:text="전화하기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/agency_number"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Name_agency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="101dp"
        android:text="기관이름"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/call_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/agency_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="114dp"
        android:text="010-1231-1231"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/call_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Name_agency" />

    <TextView
        android:id="@+id/agency_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:layout_marginTop="83dp"
        android:text="정보정보\n정보"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agency_number" />

</androidx.constraintlayout.widget.ConstraintLayout>